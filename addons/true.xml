	<Script file="true.lua"/>
    
    <Button name="amExtensionTrue" inherits="amExtensionTemplate" virtual="true">
        <Scripts>
			<OnLoad function="amExtensionTrue_OnLoad" />
            <OnClick function="amExtensionTrue_OnClick" />
        </Scripts>
        <Layers>
            <Layer level="HIGHLIGHT">
                <Texture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD" />
            </Layer>
            <Layer level="ARTWORK">
                <FontString justifyH="LEFT" text="Always evaluates to true." inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="LEFT" x="10" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
	</Button>
</Ui>