<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\FrameXML\UI.xsd">
    
	<Script file="am_modifier.lua"/>
    
    <Button name="amModifierTemplate" inherits="amListItemTemplate" virtual="true">
        <Size y="40" />
        <Scripts>
            <OnClick function="amModifier_OnClick" />
        </Scripts>
        <Layers>
            <Layer level="HIGHLIGHT">
                <Texture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD" />
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="amModString" justifyH="LEFT" inherits="GameFontHighlightSmall" wordwrap="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="50" />
                        <Anchor point="BOTTOMRIGHT" x="-100" />
                    </Anchors>
                </FontString>
                <FontString parentKey="amModID" justifyH="LEFT" text="1" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="LEFT" x="10" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="amMoveUp">
                <Size x="14" y="14"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="9" />
                </Anchors>
                <Scripts>
                    <OnClick function="amModifier_MoveUp"/>
                </Scripts>
                <NormalTexture file="Interface\Buttons\Arrow-Up-Up"/>
                <PushedTexture file="Interface\Buttons\Arrow-Up-Down"/>
                <DisabledTexture file="Interface\Buttons\Arrow-Up-Disabled"/>
            </Button>
            <Button parentKey="amMoveDown">
                <Size x="14" y="14"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="9" y="-2" />
                </Anchors>
                <Scripts>
                    <OnClick function="amModifier_MoveDown"/>
                </Scripts>
                <NormalTexture file="Interface\Buttons\Arrow-Down-Up"/>
                <PushedTexture file="Interface\Buttons\Arrow-Down-Down"/>
                <DisabledTexture file="Interface\Buttons\Arrow-Down-Disabled"/>
            </Button>
            <Button parentKey="amDelete" inherits="amDeleteButtonTemplate" frameStrata="HIGH">
                <Anchors>
                    <Anchor point="RIGHT" />
                </Anchors>
                <Scripts>
                    <OnClick function="amModifier_Delete" />
                </Scripts>
            </Button>
        </Frames>
    </Button>
</Ui>